@using CampanasDelDesierto_v1.Models
@model IEnumerable<CampanasDelDesierto_v1.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<ApplicationUser> Admins = ViewBag.Admins;
    List<ApplicationUser> Departamentos = ViewBag.Departamentos;


}
<div class="panel panel-info">
    <div class="panel-heading"> 
        <div class="panel-title"><strong>Rol:</strong> @ApplicationUser.RoleNames.ADMIN</div>
    </div>
    <div class="panel-body">
        <table class="table"> 
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreCompleto)
                </th>           
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>               
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Admins)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreCompleto)
                    </td>                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>            
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title"><strong>Rol:</strong> @ApplicationUser.RoleNames.DEPARTAMENTO</div>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nombreCompleto)
                </th>              
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Departamentos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreCompleto)
                    </td>                 
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        <a href="@Url.Action("Delete","Account",new { id = item.Id})">
                            <i class="glyphicon glyphicon-remove"></i> Eliminar
                        </a><br />
                    </td>
                </tr>
            }

        </table>

    </div>
</div>