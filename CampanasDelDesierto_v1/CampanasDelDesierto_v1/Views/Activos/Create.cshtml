@model CampanasDelDesierto_v1.Models.Activo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a href="@Url.Action("Details","Departamentos",new { id = Model.inventario.departamentoID })">
        <i class="fa fa-arrow-circle-left"></i> Regresar
    </a>
    <a href="@Url.Action("Edit","Departamentos",new { id = Model.inventario.departamentoID })">
        <i class="glyphicon glyphicon-pencil"></i> Editar
    </a>

</p>
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title"><strong>Inventario:</strong> @(Model.inventario.nombreInventario)</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <dl class="dl-horizontal col-md-6">
                <dt>@Html.DisplayNameFor(model => model.inventario.Departamento.Sucursal.nombreSucursal)</dt>
                <dd>@Html.DisplayFor(model => model.inventario.Departamento.Sucursal.nombreSucursal) </dd>

                <dt>@Html.DisplayNameFor(model => model.inventario.Departamento.nombreDepartamento)</dt>
                <dd>@Html.DisplayFor(model => model.inventario.Departamento.nombreDepartamento) </dd>

                <dt> @Html.DisplayNameFor(model => model.inventario.modeloInventario)</dt>
                <dd> @Html.DisplayFor(model => model.inventario.modeloInventario) </dd>
            </dl>
            <dl class="dl-horizontal col-md-6">
                <dt> @Html.DisplayNameFor(model => model.inventario.costo)</dt>
                <dd> @Html.DisplayFor(model => model.inventario.costo) </dd>

                <dt> @Html.DisplayName("Activos Disponibles")</dt>
                <dd> @(Model.inventario.CantidadActivosDisponibles())  </dd>

                <dt> @Html.DisplayName("Activos Prestados")</dt>
                <dd> @(Model.inventario.CantidadActivosPrestados())  </dd>
            </dl>
        </div>
    </div>
</div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Activo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nombreActivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombreActivo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombreActivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.estadoActivo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select name="estadoActivo">
                    <option value="Nuevo">Nuevo</option>
                    <option value="Usado">Usado</option>
                </select>
                @Html.ValidationMessageFor(model => model.estadoActivo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.inventarioID, "Inventario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("inventarioID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.inventarioID, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">Crear</button>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
