@model IEnumerable<CampanasDelDesierto_v1.Models.Activo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Activos</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreActivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.concepto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pagare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ordenDeCompra)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreActivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.costo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.concepto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pagare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ordenDeCompra)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idActivos }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idActivos }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idActivos })
        </td>
    </tr>
}

</table>
