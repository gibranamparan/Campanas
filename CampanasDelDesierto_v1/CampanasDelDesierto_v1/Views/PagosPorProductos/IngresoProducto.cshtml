    Layout = "~/Views/Shared/_Layout.cshtml";

    Productor productor = ViewBag.productor == null? Model.Productor: ViewBag.productor;

    TemporadaDeCosecha temporada = Model.temporadaDeCosecha;
    List<RecepcionDeProducto> ingresos = ViewBag.ingresosProducto;

    ViewDataDictionary vdd = new ViewDataDictionary();
    vdd.Add("selectMode", true);

    ViewDataDictionary vddDetailsTemporada = new ViewDataDictionary();
    vddDetailsTemporada.Add("editable", true);
    vddDetailsTemporada.Add("funcionAlReestablecer", "recalcularMontos");
    if (editMode)
    {
        vddDetailsTemporada.Add("pagoPorProducto", Model);
    }
    vddDetailsTemporada.Add("productorID", productor.idProductor);

    RecepcionDeProducto nuevaRecepcion = new RecepcionDeProducto();
    nuevaRecepcion.TemporadaDeCosechaID = Model.TemporadaDeCosechaID;
    nuevaRecepcion.idProductor = Model.idProductor;
    nuevaRecepcion.numProductor = productor.numProductor;
}

