                         $('#mensajes').append("<div id='mensaje' class='alert alert-success'>¡Seleccione un Activo!</div>");
                     }
                 }
                 //Valida los rangos
                 if ((Date.parse(fech1)) > (Date.parse(fech2))) {
                     $('#mensaje').remove();
                     $('#mensajes').append("<div id='mensaje' class='alert alert-danger'>La Fecha de Entrega no puede ser menor a la fecha final</div>");
