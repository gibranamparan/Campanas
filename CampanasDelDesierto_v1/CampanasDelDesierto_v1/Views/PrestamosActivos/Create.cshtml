                     }
                     else {
                         $('#mensaje').remove();
                         $('#mensajes').append("<div id='mensaje' class='alert alert-danger'>¡Seleccione un Activo!</div>");
                         $('#Buscar').attr('disabled', true);
                     }
                 }
               
        }
        function validacionFechas2(){
           
                 var fech1 = document.getElementById("FechaI").value;
                 var fech2 = document.getElementById("FechaF").value;
                 if (fech1 == "") {
                     $('#Buscar').attr('disabled', true)
                 }
                 else
                 {
                     var body = $('#Activos').children('tbody');
