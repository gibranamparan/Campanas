                     {
                         $('#mensaje').remove();
                         $('#mensajes').append("<div id='mensaje' class='alert alert-danger'>¡Seleccione un Activo!</div>");
                     }
            
            }
        }


        //Data table select sigle row
        var COLS_ENUM = Object.freeze({ ID: 1})
        var table = $('#Activos').DataTable({
            columnDefs: [{
                orderable: false,
                className: 'select-checkbox',
                targets: 0
            }, {                
                visible: false,
                searchable: false
            }],
            select: {
                style: 'os',
                selector: 'td:first-child'
            },
            order: [[1, 'asc']]
        });
        //Al Seleccionar un activo
        $('#Activos tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected'))
            {
                $(this).removeClass('selected');      
                $('#idActivo').val('');
                $('#Buscar').attr('disabled', true);
                $('#mensaje').remove();
                $('#mensajes').append("<div id='mensaje' class='alert alert-danger'>¡Seleccione un Activo!</div>");
               
            }
            else
            {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
                validacionFechas();
                validacionFechas2();
                var row = $(this).closest('tr')[0];
                var rowData = table.row(row).data();
                if (rowData) {
                    var rowId = rowData[1];
                    $('#idActivo').val(rowId);
                }  

            }
        });

        //$('#button').click(function () {
