            recepcion = {}

        $('#recepcionID').val(recepcion.recepcionID)
        $('#fecha').val(recepcion.fecha)
        $('#numeroRecibo').val(recepcion.numeroRecibo)
        $('#semana').val(recepcion.semana)
        $('#cantidadTonsProd1').val(recepcion.cantidadTonsProd1)
        $('#cantidadTonsProd2').val(recepcion.cantidadTonsProd2)
        $('#cantidadTonsProd3').val(recepcion.cantidadTonsProd3)
        $('#cantidadTonsProd4').val(recepcion.cantidadTonsProd4)
        $('#cantidadTonsProd5').val(recepcion.cantidadTonsProd5)
        $('#cantidadTonsProd6').val(recepcion.cantidadTonsProd6)
        $('select#idProductor').val(recepcion.idProductor)

        var idMovimiento = recepcion.idMovimiento;
        if(idMovimiento)
            $('#btnRegistrar').hide()
        else
            $('#btnRegistrar').show()
    }
</script>
