@model IEnumerable<CampanasDelDesierto_v1.Models.MovimientoFinanciero.VMInteres>
@{ 
    DateTime fechaInicial = ViewData["fechaInicial"] ==null?DateTime.Now:(DateTime)ViewData["fechaInicial"];
}

<div class="row">
    <h4>Intereses</h4>
    @if (Model != null && Model.Count() > 0)
    {
        <div class="col-md-12">
            <table class="table table-responsive table-hover table-striped">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.numMes)</th>
                    <th>@Html.DisplayNameFor(model => model.interes)</th>
                    <th>@Html.DisplayNameFor(model => model.interesAcum)</th>
                    <th>@Html.DisplayNameFor(model => model.deuda)</th>
                    <th>@Html.DisplayNameFor(model => model.pago)</th>
                    <th>@Html.DisplayNameFor(model => model.interesRestante)</th>
                    <th>@Html.DisplayNameFor(model => model.saldoCapital)</th>
                    <th>@Html.DisplayNameFor(model => model.balance)</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@fechaInicial.AddMonths(item.numMes).ToString("MMMM - yyyy")</td>
                        <td>@Html.DisplayFor(model => item.interes)</td>
                        <td>@Html.DisplayFor(model => item.interesAcum)</td>
                        <td>@Html.DisplayFor(model => item.deuda)</td>
                        <td>@Html.DisplayFor(model => item.pago)</td>
                        <td>@Html.DisplayFor(model => item.interesRestante)</td>
                        <td>@Html.DisplayFor(model => item.saldoCapital)</td>
                        <td>@Html.DisplayFor(model => item.balance)</td>
                    </tr>
                }
            </table>
        </div>
    }
    else
    {
        <div class="col-md-12 alert alert-warning">
            Este movimiento <strong>aún no ha genereado</strong> intereses.
        </div>
    }
</div>