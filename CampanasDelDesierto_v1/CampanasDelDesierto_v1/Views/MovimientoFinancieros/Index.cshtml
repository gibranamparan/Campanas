@model IEnumerable<CampanasDelDesierto_v1.Models.MovimientoFinanciero>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movimiento Financiero</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Productor.nombreProductor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.montoMovimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaMovimiento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Productor.nombreProductor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.montoMovimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaMovimiento)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idMovimiento }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idMovimiento }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idMovimiento })
        </td>
    </tr>
}

</table>
