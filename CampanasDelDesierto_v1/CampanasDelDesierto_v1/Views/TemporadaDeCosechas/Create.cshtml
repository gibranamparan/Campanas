               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       data_mask = "###0.00",
                       data_mask_reverse = "true"
                   }
               })
                    @Html.ValidationMessageFor(model => model.precioProducto4, "", new { @class = "text-danger" })
                </div>
            </div>

            @*OBLIZAS*@
            <div class="form-group col-md-6">
                <label class="control-label col-md-2">@Model.tipoProducto2</label>
                <div class="col-md-10">
