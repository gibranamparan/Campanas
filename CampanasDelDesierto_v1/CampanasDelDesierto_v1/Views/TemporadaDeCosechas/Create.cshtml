               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       data_mask = "###0.00",
                       data_mask_reverse = "true"
                   }
               })
                    @Html.ValidationMessageFor(model => model.precioProducto2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label col-md-2">@Model.tipoProducto5</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.precioProducto5, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control",
                       data_mask = "###0.00",
                       data_mask_reverse = "true"
                   }
               })
                    @Html.ValidationMessageFor(model => model.precioProducto5, "", new { @class = "text-danger" })
                </div>
            </div>

            @*MISIONES*@
