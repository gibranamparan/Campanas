@model CampanasDelDesierto_v1.Models.TemporadaDeCosecha

@{
    ViewBag.Title = "Editar Temporada";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int? pagoPorProductoID = ViewBag.pagoPorProductoID;
    int? productorID = ViewBag.productorID;
    int? temporadaID = ViewBag.temporadaID;
}

<div>
    <a href="@Url.Action("Index")">
        <i class="glyphicon glyphicon-arrow-left"></i> Historial de Temporadas 
    </a>
    @if (pagoPorProductoID != null)
    {
        <span> | </span>
        <a href="@Url.Action("Edit","PagosPorProductos", new { id = pagoPorProductoID})">
            <i class="fa fa-money"></i> Volver a Edición de Pago por Producto
        </a>
    }
    else if (productorID != null)
    {
        <span> | </span>
        <a href="@Url.Action("IngresoProducto","PagosPorProductos", new { id = productorID, temporada = temporadaID})">
            <i class="fa fa-money"></i> Volver Nuevo Registro de Pago por Producto
        </a>
    }
</div>
<h2>Editar</h2>
