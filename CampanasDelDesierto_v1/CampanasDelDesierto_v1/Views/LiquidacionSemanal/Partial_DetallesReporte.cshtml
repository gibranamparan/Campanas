@using CampanasDelDesierto_v1.Models
@model List<PagoPorProducto>

<div id="pnlDetallesReporteSemanal">
    @foreach (var ingreso in Model)
    {
        <div class="row">
            <div class="form-horizontal col-md-12">
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => ingreso.fechaMovimiento, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => ingreso.fechaMovimiento)
                        </p>
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(model => ingreso.montoMovimiento, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-8">
                        <p class="form-control-static">
                            @Html.DisplayFor(model => ingreso.montoMovimiento)
                        </p>
                    </div>
                </div>
            </div>
        </div>
        @Html.Partial("../PagosPorProductos/Partial_ListaIngresosProducto", ingreso.Recepciones)
        <hr />
    }
</div>