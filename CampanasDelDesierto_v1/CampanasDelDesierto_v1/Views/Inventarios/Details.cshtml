@model CampanasDelDesierto_v1.Models.Inventario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="@Url.Action("Edit","Inventarios",new { id = Model.inventarioID })">
    <i class="glyphicon glyphicon-pencil"></i> Editar
</a>
<a href="@Url.Action("Index","Inventarios",new { id = Model.inventarioID })">
    <i class="glyphicon glyphicon-pencil"></i> Volver
</a><br />
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title"><Strong>Inventario: </Strong>@(Model.nombreInventario)</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <dl class="dl-horizontal col-md-6">
                <dt>@Html.DisplayNameFor(model => model.Departamento.nombreDepartamento)</dt>
                <dd>@Html.DisplayFor(model => model.Departamento.nombreDepartamento) </dd>

                <dt> @Html.DisplayNameFor(model => model.nombreInventario)</dt>
                <dd> @Html.DisplayFor(model => model.nombreInventario) </dd>

                <dt> @Html.DisplayNameFor(model => model.modeloInventario)</dt>
                <dd> @Html.DisplayFor(model => model.modeloInventario)  </dd>
            </dl>
            <dl class="dl-horizontal col-md-6">
                <dt> @Html.DisplayNameFor(model => model.costo) </dt>
                <dd> @Html.DisplayFor(model => model.costo)  </dd>

                <dt> @Html.DisplayNameFor(model => model.cantidad)   </dt>
                <dd> @Model.Activos.Count() </dd>

                <dt> Activos Disponibles</dt>
                <dd> @Model.cantidadActivosDisponibles()</dd>
            </dl>
        </div>       
    </div>
</div>

<div class="">
    <legend>Inventarios</legend>


    <div>
        <table class="table datablejs">
            <thead>
                <tr>
                    <th>Nombre del Activo</th>
                    <th>Estado del Activo</th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activo in Model.Activos)
            {
                    <tr>
                        <td>@(activo.nombreActivo)</td>
                        <td>@activo.estadoActivo</td>
                        <td>
                            <a href="@Url.Action("Delete", "Activos", new { id = activo.idActivo })">
                            <i class="glyphicon glyphicon-remove"></i> Eliminar
                            </a><br />
                            <a href="@Url.Action("Details", "Activos", new { id = activo.idActivo })">
                                <i class="glyphicon glyphicon-eye-open"></i> Detalles
                            </a><br />
                            <a href="@Url.Action("Edit", "Activos", new { id = activo.idActivo })">
                                <i class="glyphicon glyphicon-pencil"></i> Editar
                            </a><br />
                            <a href="@Url.Action("Create", "PrestamosActivos", new { id = activo.idActivo })">
                                <i class="fa fa-money"></i> Prestamo
                            </a><br />
                        </td>                       
                    </tr>
                }
            </tbody>


        </table>



    </div>
</div>
<div>
    @Html.ActionLink("Crear Activo", "Create", "Activos", new { id = Model.inventarioID }, new { @class = "btn btn-primary" })
</div>
