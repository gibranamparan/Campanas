@model CampanasDelDesierto_v1.Models.VentaACredito

@*    LISTA DE LOS PRODUCTOS COMPRADOS*@

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Nombre Producto")</th>
                    <th>@Html.DisplayName("Costo")</th>
                    <th>@Html.DisplayName("Es Arbol de Aceituna")</th>
                    <th>@Html.DisplayName("Descripcion")</th>
                    <th>@Html.DisplayName("Fecha del Movimiento")</th>
                    <th>@Html.DisplayName("Cantidad Material")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var compra in Model.ComprasProductos)
                {
                    <tr>
                        <td>@compra.Producto.nombreProducto</td>
                        <td>@compra.Producto.costo</td>
                        <td>@compra.Producto.isArbolAceituna</td>
                        <td>@compra.Producto.descripcion</td>
                        <td>@compra.venta.fechaMovimiento</td>
                        <td>@compra.cantidadMaterial</td>

                    </tr>
                }
            </tbody>
        </table>