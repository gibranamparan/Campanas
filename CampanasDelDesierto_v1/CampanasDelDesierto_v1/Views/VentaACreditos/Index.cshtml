@model IEnumerable<CampanasDelDesierto_v1.Models.VentaACredito>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venta Credito</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Productor.nombreProductor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.montoMovimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaMovimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidadMaterial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producto.nombreProducto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.balance)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Productor.nombreProductor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.montoMovimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaMovimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidadMaterial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producto.nombreProducto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.balance)
        </td>
        <td>
            <a href="@Url.Action("Edit","VentaACreditos",new { id = item.idMovimiento })">
                <i class="glyphicon glyphicon-pencil"></i> Editar
            </a><br />
            <a href="@Url.Action("Details","VentaACreditos",new { id = item.idMovimiento })">
                <i class="glyphicon glyphicon-usd"></i> Movimientos
            </a><br />
            <a href="@Url.Action("Delete","VentaACreditos",new { id = item.idMovimiento })">
                <i class="glyphicon glyphicon-remove"></i> Eliminar
            </a>
        </td>
    </tr>
}

</table>
