@model CampanasDelDesierto_v1.Models.Sucursal

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <a href="@Url.Action("Index","Sucursales",new { id = Model.idSucursal })">
        <i class="fa fa-arrow-circle-left"></i> Regresar
    </a>
    <a href="@Url.Action("Edit","Sucursales",new { id = Model.idSucursal })">
        <i class="glyphicon glyphicon-pencil"></i> Editar
    </a>
</p>


@*Panel de informacion a eliminar*@
<div class="panel panel-primary">
    <div class="panel-heading">
        <h1 class="panel-title"><strong>Eliminar</strong></h1>
    </div>
    <div class="panel-body">
        <h3>¿Estás seguro que quieres eliminar esto?</h3>
        <div class="row">
            <dl class="dl-horizontal col-md-3">
                <dt>@Html.DisplayNameFor(model => model.nombreSucursal)</dt>
                <dd>@Html.DisplayFor(model => model.nombreSucursal)</dd>               
            </dl>            
        </div> 
        <div class="form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-10">
                        <button class="btn btn-danger">Eliminar</button>
                    </div>
                </div>                
            }
        </div>

    </div>

</div>

