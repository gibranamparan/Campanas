@model IEnumerable<CampanasDelDesierto_v1.Models.Empleado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Empleados</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.nombreDepartamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidoPaterno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidoMaterno)
        </th>
        <th></th>
    </tr>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.nombreDepartamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoPaterno)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidoMaterno)
        </td>
        <td>
            <a href="@Url.Action("Edit","Empleados",new { id = item.idEmpleado })">
                <i class="glyphicon glyphicon-pencil"></i> Editar
            </a><br />
            <a href="@Url.Action("Details","Empleados",new { id = item.idEmpleado })">
                <i class="glyphicon glyphicon-usd"></i> Movimientos
            </a><br />
            <a href="@Url.Action("Delete","Empleados",new { id = item.idEmpleado })">
                <i class="glyphicon glyphicon-remove"></i> Eliminar
            </a>


                </td>
            </tr>
        }
    </tbody>

</table>
