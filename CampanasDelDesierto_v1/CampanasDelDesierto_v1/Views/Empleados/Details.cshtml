@model CampanasDelDesierto_v1.Models.Empleado
@using CampanasDelDesierto_v1.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ActivosAD = Model.PrestamosActivos.FirstOrDefault().AdquisicionDeActivos;
    AdquisicionDeActivo adquisicion = new AdquisicionDeActivo();
  
}

<p>
    <a href="@Url.Action("Index","Empleados")">
        <i class="fa fa-arrow-circle-left"></i> Regresar a lista de Empleados
    </a>

</p>
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title"><strong>Empleado:</strong> @(Model.nombre+" "+Model.apellidoPaterno+" "+Model.apellidoMaterno)</h2>
    </div>
    <div class="panel-body">
        <div class="row">
            <dl class="dl-horizontal col-md-3">
                <dt>@Html.DisplayNameFor(model => model.Departamento.nombreDepartamento):</dt>
                <dd>@Html.DisplayFor(model => model.Departamento.nombreDepartamento) </dd>

                <dt> @Html.DisplayNameFor(model => model.Departamento.Sucursal.nombreSucursal):</dt>
                <dd> @Html.DisplayFor(model => model.Departamento.Sucursal.nombreSucursal) </dd>
            </dl>           
        </div>
        @*Partial de listado de Activos Adquiridos*@
        <div class="col-md-12">
            @*LISTA DE LOS PRODUCTOS COMPRADOS*@
            <h4>Activos Adquiridos</h4>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th width="10em">
                            @Html.DisplayNameFor(model => adquisicion.activo.partidaNumActivo)
                        </th>
                        <th width="20%">
                            @Html.DisplayNameFor(model => adquisicion.activo.codigoActivo)
                        </th>
                        <th width="10em">
                            @Html.DisplayNameFor(model => adquisicion.activo.descripcionActivo)
                        </th>
                        <th>
                             @Html.DisplayNameFor(model => adquisicion.activo.unidadesActivo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => adquisicion.activo.mmcUnidades)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => adquisicion.activo.observacionesActivo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => adquisicion.activo.contabilidadActivo)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activos_AD in Model.PrestamosActivos.FirstOrDefault().AdquisicionDeActivos)
            {
                        <tr>
                            <td width="10em">
                                @Html.DisplayFor(model => activos_AD.activo.partidaNumActivo)
                            </td>
                            <td width="20%">
                                @Html.DisplayFor(model => activos_AD.activo.codigoActivo)
                            </td>
                            <td width="10em">
                                @Html.DisplayFor(model => activos_AD.activo.descripcionActivo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => activos_AD.activo.unidadesActivo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => activos_AD.activo.mmcUnidades)
                            </td>
                            <td>
                                @Html.DisplayFor(model => activos_AD.activo.observacionesActivo)
                            </td>
                            <td>
                                @Html.DisplayFor(model => activos_AD.activo.partidaNumActivo)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a href="@Url.Action("Edit",new { id = Model.idEmpleado })">
            <i class="glyphicon glyphicon-pencil"></i> Editar
        </a>
    </div>
</div>