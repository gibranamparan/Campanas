@model CampanasDelDesierto_v1.Models.Departamento

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-info">
    <div class="panel-heading">
        <h2 class="panel-title"><strong>Sucursal:</strong>@Html.DisplayFor(model => model.Sucursal.nombreSucursal)</h2>
    </div>   
</div>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h2 class="panel-title"><strong>Eliminar</strong></h2>
    </div>
    <div class="panel-body">
        <h3>¿Estás seguro que quieres eliminar esto?</h3>
        <div class="row">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.nombreDepartamento)</dt>                                    
                <dd>@Html.DisplayFor(model => model.nombreDepartamento)</dd>                                    
                <dt>@Html.DisplayNameFor(model => model.domicilio)</dt>                                    
                <dd>@Html.DisplayFor(model => model.domicilio)</dd>                                    
            </dl>
        </div>
        <div class="form-group">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="col-md-10">
                        <button class="btn btn-danger">Eliminar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>