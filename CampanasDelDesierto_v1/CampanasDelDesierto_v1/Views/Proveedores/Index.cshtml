@model IEnumerable<CampanasDelDesierto_v1.Models.Proveedores>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Tabla proveedores</h2>

<a href="@Url.Action("Create")">
    <i class="fa fa-plus-circle"></i> Nuevo Proveedor
</a>
<table class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombreProveedor)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreProveedor)
        </td>
        <td>            
            @Html.ActionLink(" ", "Delete", new { id=item.id }, new { @class = "glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
