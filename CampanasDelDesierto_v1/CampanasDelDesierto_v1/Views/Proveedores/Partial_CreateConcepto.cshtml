@model CampanasDelDesierto_v1.Models.PrestamoYAbonoCapital.Conceptos

@using (Html.BeginForm("CreateConcepto","Proveedores", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group col-md-12">
            Nuevo @Html.LabelFor(model => model.nombreConcepto)
            <div class="row">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombreConcepto, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary">Crear</button>
                </div>
            </div>
            @Html.ValidationMessageFor(model => model.nombreConcepto, "", new { @class = "text-danger" })
        </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
